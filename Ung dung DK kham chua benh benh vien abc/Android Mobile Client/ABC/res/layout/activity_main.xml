<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.abc.MainActivity" >
    <TableLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*" >
        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp">
            <TextView
		       android:id="@+id/txtIntro"
		       android:layout_width="wrap_content"
		       android:layout_height="match_parent"
		       android:layout_margin="10dp"
		       android:background="#FFC966"
		       android:gravity="center"
		       android:text="ỨNG DỤNG ĐĂNG KÝ KHÁM BỆNH ABC"
		       android:textSize="30sp" />
        </TableRow>
        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             >
            <ScrollView 
                android:layout_width="match_parent"
    			android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                >
                 <RelativeLayout 
    			android:layout_width="match_parent"
    			android:layout_height="match_parent"
    			android:layout_gravity="center_horizontal"
                >
               <Button
		        android:id="@+id/button1"
		        android:layout_width="240sp"
		        android:layout_height="240sp"
		        android:textSize="30sp"
		        android:layout_margin="10dp"
		        android:text="Tư vấn"
		        android:layout_alignParentLeft="true"
		        android:drawableTop="@drawable/hoidap"
		        />
               <Button
		        android:id="@+id/button2"
		       	android:layout_width="240sp"
		        android:layout_height="240sp"
		        android:textSize="30sp"
		        android:layout_margin="10dp"
		        android:text="Giới thiệu"
		        android:layout_toRightOf="@+id/button1"
		       	android:drawableTop="@drawable/gioithieu"
		        />
               <Button
		        android:id="@+id/button3"
		        android:layout_width="240sp"
		        android:layout_height="240sp"
		        android:textSize="30sp"
		        android:layout_margin="10dp"
		        android:text="Đăng ký khám bệnh"
		        android:layout_below="@+id/button2"
		        android:layout_toRightOf="@+id/button4"
		        android:drawableTop="@drawable/dangkykb"
		        />
               <Button
		        android:id="@+id/button4"
		        android:layout_width="240sp"
		        android:layout_height="240sp"
		        android:textSize="30sp"
		        android:layout_margin="10dp"		     
		        android:text="Tìm bác sĩ"
		        android:layout_below="@+id/button1"
		        android:drawableTop="@drawable/timbacsi"
		        />   
                
            </RelativeLayout>
                
            </ScrollView>
            
           
            
            
        </TableRow>
	 
	 
	 </TableLayout>

</LinearLayout>
