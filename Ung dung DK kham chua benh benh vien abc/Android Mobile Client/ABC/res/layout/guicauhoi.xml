<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txtIntro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#FFC966"
        android:gravity="center"
        android:text="GỬI CÂU HỎI"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/edtHoten"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Nhập họ và tên"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/edtSodienthoai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Nhập số điện thoại"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Nhập email"
        android:textSize="30sp" />

    <Spinner
        android:id="@+id/spnChuyenkhoa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/prompt_khoa" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.56"
        android:ems="10"
        android:hint="Ghi câu hỏi của bạn ở đây..."
        android:inputType="textMultiLine"
        android:textSize="30sp" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btnGuicauhoi"
        android:layout_width="250sp"
        android:layout_height="60sp"
        android:layout_margin="10sp"
        android:drawableLeft="@drawable/register"
        android:text="Gửi câu hỏi"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnLamlai"
        android:layout_width="250sp"
        android:layout_height="60sp"
        android:layout_margin="10sp"
        android:drawableLeft="@drawable/reset"
        android:text="Làm lại"
        android:textSize="30sp" />

</LinearLayout>